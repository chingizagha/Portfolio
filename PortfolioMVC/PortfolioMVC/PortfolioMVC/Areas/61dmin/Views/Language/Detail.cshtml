@model Language

<div class="card w-100 mt-3">
  <div class="card-body">
    <h5 class="card-title">@Model.Name</h5>
    <p class="card-text">Level: @Model.Level</p>
    <a asp-controller="Language" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-controller="Language" asp-action="List" class="btn btn-primary">Back to List</a>

    <form asp-controller="Language" asp-action="Remove" asp-route-id="@Model.Id" class="d-inline"
        onclick="return confirm('Are you sure you want to delete @Model.Name?')">
        <button type="submit" class="btn btn-primary">Remove</button>
    </form>
  </div>
</div>