@model HomeViewModel


@foreach (var item in @Model.Languages)
{
<div class="card mt-3">
  <div class="card-header">
    @item.Name
  </div>
  <div class="card-body">
    <h5 class="card-title">Level: @item.Level</h5>
    <a asp-controller="Language" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
    <a asp-controller="Language" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>

    <form asp-controller="Language" asp-action="Remove" asp-route-id="@item.Id" class="d-inline"
        onclick="return confirm('Are you sure you want to delete @item.Name?')">
        <button type="submit" class="btn btn-primary">Remove</button>
    </form>

  </div>
</div>
}