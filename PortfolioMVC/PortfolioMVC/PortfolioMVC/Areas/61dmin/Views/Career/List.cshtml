@model HomeViewModel


@foreach (var item in @Model.Careers)
{
<div class="card mt-3">
  <div class="card-header">
    @item.Name
  </div>
  <div class="card-body">
    <h5 class="card-title">Short Description: @item.ShortDesc</h5>
    <p class="card-text">Location: @item.Location</p>
    <p class="card-text">@item.StartDate - @item.EndDate</p>
    <a asp-controller="Career" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
    <a asp-controller="Career" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>

    <form asp-controller="Career" asp-action="Remove" asp-route-id="@item.Id" class="d-inline"
        onclick="return confirm('Are you sure you want to delete @item.Name?')">
        <button type="submit" class="btn btn-primary">Remove</button>
    </form>

  </div>
</div>
}