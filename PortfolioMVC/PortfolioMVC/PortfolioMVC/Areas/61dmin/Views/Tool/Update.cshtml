@model Tool

@using (Html.BeginForm("Update", "Tool", FormMethod.Post))
{
     @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" value="@Model.Id"/>


    <div class="mb-3 form-group">
    <label asp-for="@Model.Name" class="form-label">Name</label>
    <input asp-for="@Model.Name" type="text" class="form-control" aria-describedby="Name">
    <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="mb-3 form-group">
    <label asp-for="@Model.Level" class="form-label">Level</label>
    <input asp-for="@Model.Level" type="number" class="form-control" aria-describedby="Level">
    <span asp-validation-for="@Model.Level" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>


    <a asp-controller="Tool" asp-action="List" class="btn btn-secondary">Back to List</a> 
}